<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnVerify"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zedtal"
    android:orientation="vertical"
    android:padding="4dp"
    tools:context=".progress">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="292dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/archivo_black"
            android:gravity="center"
            android:text="Contact Verification"
            android:textColor="#FFFFFF"
            android:textSize="27sp" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_baseline_call_24" />

    </LinearLayout>

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="243dp"
        android:padding="40dp"
        android:src="@drawable/dial" />

    <TextView
        android:id="@+id/tvChecker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:drawableRight="@drawable/ic_baseline_smartphone_24"
        android:fontFamily="@font/archivo_black"
        android:text="Enter your Phone No. "
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/etPhoneChecker"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="#00BCD4"
        android:drawableRight="@drawable/ic_baseline_call_24"
        android:ems="10"
        android:hint="Cell"
        android:inputType="phone"
        android:padding="6dp" />

    <Button
        android:id="@+id/btnVerification"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="4dp"
        android:insetLeft="10dp"
        android:insetTop="10dp"
        android:insetRight="10dp"
        android:insetBottom="10dp"
        android:onClick="verification"
        android:text="Verify"
        app:backgroundTint="#9E1D1D" />
</LinearLayout>